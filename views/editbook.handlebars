<div class="container">
    <h1>Edite o seu livro:</h1>
    <a href="/books">Livros</a>
    <form action="/books/updatebook" method="post">
        <input type="hidden" name="id" value="{{book.id}}">
        <div class="form-control">
            <label for="title">Título:</label>
            <input type="text" name="title" value="{{book.title}}" placeholder="Digite o título">
        </div>
        <div class="form-control">
            <label for="pageqty">Número de páginas:</label>
            <input type="number" name="pageqty" value="{{book.pageqty}}" placeholder="Digite o número de páginas">
        </div>
        <input type="submit" class="btn btn-primary" value="Atualizar">
    </form>
</div>